// fonts
html, body, h1, h2, p, a, li,
	font-family: Arial

img
	max-width: 100%

main
	center(1400px)
	text-align: center
	header 
		img
			max-width: 80%
			max-height: 20vh
	.mainpic
		img	
			max-height: 60vh
			max-width: 100%
	.content
		margin: auto
		// mobile
		max-width: 100%
		padding: 0 1rem
		@media(min-width: 35rem)
			padding: 0
			max-width: 50%
		@media(min-width: 600px)
			max-width: 30%
			
		ul 
			padding: 0
			list-style: none
		h2
			border: solid black .2rem
			text-transform: uppercase
			text-align: center
			&:hover
				background: black
				color: white
				a 
					color: white
			&.trenner
				border: none
				&:hover
					background: none
					color: black
					a 
						color: black
		#mc_embed_signup form
			padding: 0
			margin: 0
			
			.asterisk
				color: black
			.mc-field-group
				margin: 0	
				width: 100%
a 
	text-decoration: none
	color: black
	&:hover
		color: white

	
